[core]
  editor = vim
  excludesfile = ~/.gitignore
[include]
  path = .gituserconfig
[alias]
  ls = show-ref
  st = status
  co = checkout
  ci = commit -s
  ciff = diff --cached
  br = branch
  vis = !gitk --all &
  llog = log --date=local
  unpushed = !"PROJ_BRANCH=$(git symbolic-ref HEAD | sed 's|refs/heads/||') && git log origin/$PROJ_BRANCH..HEAD"
  unpulled = !"PROJ_BRANCH=$(git symbolic-ref HEAD | sed 's|refs/heads/||') && git fetch && git log HEAD..origin/$PROJ_BRANCH"
  w = whatchanged
  sw = !"git reflog | grep checkout | grep -v "\\^0$" | head -n 1 | cut -d ' ' -f 6 | xargs git checkout"
  origin-repo-url = !sh -c 'git config --get remote.origin.url | sed -e 's/git@//g' | sed -e 's/\\.git//g' | sed -e 's=\\:=\\/=g'' | xargs -I url echo 'https://'url
  compare = !sh -c 'open $(git origin-repo-url)/compare/$1...$2' -
  browse = !sh -c 'open $(git origin-repo-url)/tree/master/$1' -
  heroku-prod-deployed-commit = !sh -c 'heroku releases -r production | grep Deploy | tr -s \" \" | cut -d \" \" -f 3 | head -n 1' -
  compare-heroku = !sh -c 'open $(git origin-repo-url)/compare/$(git heroku-prod-deployed-commit)...master' -
[merge]
  tool = diffmerge
[diff]
  tool = diffmerge
[mergetool "diffmerge"]
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = true
[difftool "diffmerge"]
  cmd = diffmerge $LOCAL $REMOTE
[format]
  pretty = format:"%h %C(yellow)%ci%Creset %Cgreen%an%Creset | %s"
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = green reverse
  local = green
  remote = red
[push]
  default = current
[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = true
  autosetuprebase = always
[rebase]
  stat = true
[branch "*branch-name*"]
  rebase = true
